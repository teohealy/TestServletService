  <!--  SERVLET FOR ADDITION-->
  <servlet>
    <servlet-name>AddUserServlet</servlet-name>
    <servlet-class>servlet.AddUserServlet</servlet-class>
  </servlet>


  <!--  SERVLET FOR DELETE-->
  <servlet>
    <servlet-name>DeleteUserServlet</servlet-name>
    <servlet-class>servlet.DeleteUserServlet</servlet-class>
  </servlet>

  <!--  SERVLET FOR UPDATE-->
  <servlet>
    <servlet-name>UpdateUserServlet</servlet-name>
    <servlet-class>servlet.UpdateUserServlet</servlet-class>
  </servlet>

  <!--  SERVLET FOR GETTING JSON-->
  <servlet>
    <servlet-name>JsonHandlerServlet</servlet-name>
    <servlet-class>jsonservlet.JsonHandlerServlet</servlet-class>
  </servlet>

  <!--  SERVLET FOR POST JSON-->
  <servlet>
    <servlet-name>JsonFormServlet</servlet-name>
    <servlet-class>jsonservlet.JsonFormServlet</servlet-class>
  </servlet>

</web-app>
